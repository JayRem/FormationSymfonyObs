{% extends '::base.html.twig' %}

{% block body %}
	{{ form_start(form) }}
		{{ form_errors(form) }}
		
		<div>
			{{ form_errors(form.titre) }}
			{{ form_label(form.titre) }}
			{{ form_widget(form.titre) }}
			{# équivalent à form_row(form.titre) #}
		</div>
		
		<div>
			{{ form_errors(form.message) }}
			{{ form_label(form.message) }}
			{{ form_widget(form.message) }}
		</div>
		
	{{ form_end(form) }}
{% endblock %}